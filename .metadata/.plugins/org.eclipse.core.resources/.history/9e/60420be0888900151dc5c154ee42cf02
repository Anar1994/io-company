package Pak1;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
 
public class Pak101 extends JFrame {
 
    public static void main(String[] args) {
        final Pak101 mf = new Pak101();
        JPanel jp = new JPanel();
        JButton but = new JButton("First window");
        but.addActionListener(new ActionListener() {
 
            public void actionPerformed(ActionEvent e) {
                MainDialog md = new MainDialog(mf);
                md.setVisible(true);
            }
 
        });
        jp.add(but);
        mf.setContentPane(jp);
        mf.pack();
 
        mf.setVisible(true);
    }
 
    private static class MainDialog extends JDialog {
 
        public MainDialog(final Pak101 mf) {
            super(mf, true);
            JPanel panel = new JPanel();
            JButton okButton = new JButton("Second window");
            okButton.addActionListener(new ActionListener() {
 
                public void actionPerformed(ActionEvent e) {
                    OKDialog md = new OKDialog(mf);
                    mf.setVisible(false);
                    md.setVisible(true);
                }
 
            });
            panel.add(okButton);
            setContentPane(panel);
            pack();
        }
 
    }
 
    private static class OKDialog extends JDialog {
 
        public OKDialog(final Pak101 mf) {
            super(mf, true);
            JPanel panel = new JPanel();
            JButton Button3 = new JButton("Third window");
            Button3.addActionListener(new ActionListener() {
 
                public void actionPerformed(ActionEvent e) {
                    mf.setVisible(false);
                }
 
            });
            panel.add(Button3);
            setContentPane(panel);
            pack();
        }
 
    }
 
}